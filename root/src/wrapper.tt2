								<div class="menu bubplastic horizontal blue">
										<ul>
											[% IF c.user_exists %]
                                            [% IF
                                            c.check_user_roles('Administrator') %]
											<li><span class="menu_r"><a href="[%
                                            c.uri_for('/admin') %]"><span
                                            class="menu_ar">Área Administrativa</span></a></span></li>
                                            [% ELSE %]
											<li><span class="menu_r"><a href="[%
                                            c.uri_for('/review') %]"><span
                                            class="menu_ar">Posters</span></a></span></li>
