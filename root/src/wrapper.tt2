	<script type="text/javascript" >
		var ie_img = "[% c.uri_for('/static/images/no-ie6.png')%]";
	</script>
    <script type="text/javascript" src="[% c.uri_for('/static/js/jquery-1.4.2.min.js') %]"></script>
